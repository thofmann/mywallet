html
  height 100%

body
  min-height 100%
  position relative
  padding-bottom 125px

.holo
  margin 0
  padding 0px 7px 0px 4px
  background bottom left linear-gradient(#44aaff, #44aaff) no-repeat, bottom center linear-gradient(#44aaff, #44aaff) repeat-x, bottom right linear-gradient(#44aaff, #44aaff) no-repeat
  background-size 2px 9px, 2px 2px, 2px 9px

.spaced
	margin-top 16px
  
.fairly-spaced
  margin-top 54px
  
.very-spaced
  margin-top 200px

.padded
	padding-top 16px
  
.fairly-padded
  padding-top 54px

.very-padded
  padding-top 200px

.footer
  position absolute
  right 0
  bottom 20px
  left 0
  border 0
  padding 0
  text-align center

.login-grid
  border 0
  padding 0
  margin 20px auto 0 auto
  width 60%
  
.login-cell
  border 0
  padding 0
  margin 0
  width 12.5%
  float left
  font-weight bold

.color-0
  background-color #ff8888

.color-1
  background-color #88ff88
  
.color-2
  background-color #8888ff

.color-3
  background-color #ffff88


.clear
  border 0
  padding 0
  margin 0
  width 0
  height 0
  clear both